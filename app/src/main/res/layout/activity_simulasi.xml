<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blu"
    android:padding="16dp"
    tools:context=".SimulasiActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tombol Back -->
        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/transparent_card"
            android:contentDescription="Kembali"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ”® Predict Star with Celestica"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/buttonBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Form CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <!-- Input Temperature -->
                <EditText
                    android:id="@+id/inputTemp"
                    style="@style/StarInput"
                    android:hint="ðŸŒ¡ï¸ Temperature (K)"
                    android:layout_marginBottom="12dp"
                    android:inputType="numberDecimal|numberSigned" />

                <!-- Input Luminosity -->
                <EditText
                    android:id="@+id/inputLum"
                    style="@style/StarInput"
                    android:hint="ðŸ’¡ Luminosity (L/Lo)"
                    android:layout_marginBottom="12dp"
                    android:inputType="numberDecimal|numberSigned" />

                <!-- Input Radius -->
                <EditText
                    android:id="@+id/inputRadius"
                    style="@style/StarInput"
                    android:hint="ðŸŒ€ Radius (R/Ro)"
                    android:layout_marginBottom="12dp"
                    android:inputType="numberDecimal|numberSigned" />

                <!-- Input Magnitude -->
                <EditText
                    android:id="@+id/inputMv"
                    style="@style/StarInput"
                    android:hint="ðŸŒ  Magnitude (Mv)"
                    android:layout_marginBottom="12dp"
                    android:inputType="numberDecimal|numberSigned" />

                <!-- Spinner Color -->
                <Spinner
                    android:id="@+id/spinnerColor"
                    style="@style/StarSpinner"
                    android:layout_marginBottom="12dp"
                    android:minHeight="48dp" />

                <!-- Spinner Class -->
                <Spinner
                    android:id="@+id/spinnerClass"
                    style="@style/StarSpinner"
                    android:layout_marginBottom="20dp"
                    android:minHeight="48dp" />

                <!-- Tombol Prediksi -->
                <Button
                    android:id="@+id/btnPredict"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:text="ðŸ”­ Predict"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/transparent_card" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TextView hasil -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hasil prediksi akan tampil di sini"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/formCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
